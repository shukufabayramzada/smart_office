{
  "swagger": "2.0",
  "info": {
    "title": "Smart Office API",
    "description": "API for controlling light and water systems",
    "version": "1.0.0"
  },
  "host": "smart-office.onrender.com",
  "basePath": "/",
  "paths": {
    "/lightstate/{light_id}": {
      "get": {
        "summary": "Get light state",
        "parameters": [
          {
            "name": "light_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the light to retrieve the state"
          }
        ],
        "responses": {
          "200": {
            "description": "Light state retrieved",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Light not found"
          }
        }
      }
    },
    "/light/{light_id}": {
      "patch": {
        "summary": "Turn light on or off",
        "parameters": [
          {
            "name": "light_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the light to update"
          },
          {
            "name": "action",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": ["on", "off"]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Light state updated",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Light not found"
          },
          "400": {
            "description": "Invalid action"
          }
        }
      }
    },
    "/waterstate/{water_id}": {
      "get": {
        "summary": "Get water system state",
        "parameters": [
          {
            "name": "water_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the water system to retrieve the state"
          }
        ],
        "responses": {
          "200": {
            "description": "Water system state retrieved",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Water system not found"
          }
        }
      }
    },
    "/water/{water_id}": {
      "patch": {
        "summary": "Turn water on or off",
        "parameters": [
          {
            "name": "water_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the water system to update"
          },
          {
            "name": "action",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": ["on", "off"]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Water system state updated",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Water system not found"
          },
          "400": {
            "description": "Invalid action"
          }
        }
      }
    }
  }
}
